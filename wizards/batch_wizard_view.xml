<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_payslip_employees_raspa_form_inherit" model="ir.ui.view">
            <field name="name">hr_employee_payslip</field>
            <field name="model">hr.payslip.employees</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_by_employees"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='structure_id']" position="after">
                    <field name="currency_id"/>
                    <field name="show_rate" invisible="1"/>
                    <field name="currency_rate" invisible="not show_rate"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>