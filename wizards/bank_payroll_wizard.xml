<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="bank_payroll_wizard_form_view" model="ir.ui.view">
            <field name="name">bank_payroll_wizard.form</field>
            <field name="model">bank_payroll.wizard</field>
            <field name="arch" type="xml">
                <form string="Payroll Wizard">
                    <sheet>
                        <div class="oe_title">
                            <label for="file_date"/>
                            <h1>
                                <field name="file_date" placeholder="Title"/>
                            </h1>
                        </div>

                            <group>
<!--                                <field name="value_date"/>-->
<!--                                <field name="creditor_bic_code"/>-->
<!--                                <field name="narrative"/>-->
<!--                                <field name="currency_id"/>-->
<!--                                <field name="company_account_number"/>-->
<!--                                <field name="company_account_name"/>-->
<!--                                <field name="report_type"/>-->
                                <field name="batch_ids" widget="many2many_tags"/>
                                <field name="payslips_ids" widget="many2many_tags"/>


                        </group>
                        <footer>
<!--                            <button name="generate_payslip_report" string="Generate Payslip bank Report" type="object" class="btn btn-primary"/>-->
<!--                            <button name="generate_insurance_report" string="Generate Insurance Report" type="object" class="btn btn-primary"/>-->
                            <button name="generate_payslip_breakdown_report" string="Generate Payslip Report" type="object" class="btn btn-primary"/>

                        </footer>
                    </sheet>
                </form>
            </field>
        </record>





        <record id="bank_payroll_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Payroll Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank_payroll.wizard</field>

            <field name="view_mode">form</field>
            <field name="target">new</field>

        </record>

        <menuitem name="Payroll bank report" id="bank_payroll_wizard_menu" parent="hr_payroll.menu_hr_payroll_report" action="bank_payroll_wizard_act_window"/>

    </data>
</odoo>