<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_contract_raspa_form_inherit" model="ir.ui.view">
            <field name="name">hr_contract_raspa.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='salary']" position="before">
                    <field name="secondary_currency_id"/>
                </xpath>
                <xpath expr="//field[@name='wage']" position="attributes">
                    <attribute name="options">{"widget":"monetary","currency_field":"secondary_currency_id"}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>